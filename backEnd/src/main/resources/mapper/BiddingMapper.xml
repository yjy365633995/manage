<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.nari.mapper.BiddingMapper">
  <resultMap id="BaseResultMap" type="org.nari.model.Bidding">
    <id column="uuid" jdbcType="VARCHAR" property="uuid" />
    <result column="bidding_id" jdbcType="VARCHAR" property="biddingId" />
    <result column="start_time" jdbcType="DATETIME" property="startTime" />
    <result column="material_id" jdbcType="VARCHAR" property="materialId" />
    <result column="material_name" jdbcType="VARCHAR" property="materialName" />
    <result column="material_standard" jdbcType="VARCHAR" property="materialStandard" />
    <result column="weight" jdbcType="DOUBLE" property="weight" />
    <result column="unit" jdbcType="VARCHAR" property="unit" />
    <result column="num" jdbcType="INTEGER" property="num" />
    <result column="delivery_date" jdbcType="DATETIME" property="deliveryDate" />
    <result column="adjuncts" jdbcType="VARCHAR" property="adjuncts" />
    <result column="adjuncts_name" jdbcType="VARCHAR" property="adjunctsName" />
    <result column="material_requirement" jdbcType="VARCHAR" property="materialRequirement" />
    <result column="bidding_company" jdbcType="VARCHAR" property="biddingCompany" />
    <result column="turn_num" jdbcType="INTEGER" property="turnNum" />
    <result column="turn_time_minute" jdbcType="INTEGER" property="turnTimeMinute" />
    <result column="status" jdbcType="INTEGER" property="status" />
    <result column="visible" jdbcType="INTEGER" property="visible" />
  </resultMap>

  <insert id="insertBidding" parameterType="org.nari.model.Bidding">
    insert into bidding
    values(
        #{uuid}, #{biddingId}, #{startTime},
        #{materialId}, #{materialName}, #{materialStandard},
        #{weight}, #{unit}, #{num}, #{deliveryDate},
        #{adjuncts}, #{adjunctsName}, #{materialRequirement}, #{biddingCompany},
        #{turnNum}, #{turnTimeMinute},
        #{status}, #{visible}
    )
  </insert>

  <select id="getBiddingById" parameterType="java.lang.String" resultType="org.nari.model.Bidding">
    select *from bidding
        where uuid = #{uuid}
  </select>
  <select id="getBiddingByBid" parameterType="java.lang.String" resultType="org.nari.model.Bidding">
    select *from bidding
        where bidding_id = #{biddingId}
  </select>
  <select id="getAll" resultType="org.nari.model.Bidding" >
    select *from bidding
  </select>
  <select id="getBiddingByStatus" parameterType="java.lang.Integer" resultType="org.nari.model.Bidding">
    select *from bidding
        where status = #{status}
  </select>

  <update id="updateBiddingById" parameterType="org.nari.model.Bidding">
    update bidding
    set bidding_id = #{biddingId},
      start_time = #{startTime},
      material_id = #{materialId},
      material_name = #{materialName},
      material_standard = #{materialStandard},
      weight = #{weight},
      unit = #{unit},
      num = #{num},
      delivery_date = #{deliveryDate},
      adjuncts = #{adjuncts},
      adjuncts_name = #{adjunctsName},
      material_requirement = #{materialRequirement},
      bidding_company = #{biddingCompany},
      turn_num = #{turnNum},
      turn_time_minute = #{turnTimeMinute},
      status = #{status},
      visible = #{visible}
    where uuid = #{uuid}
  </update>
</mapper>